{
  "name": "Project",
  "type": "object",
  "properties": {
    "name": {
      "type": "string",
      "description": "Project name"
    },
    "description": {
      "type": "string",
      "description": "Project description"
    },
    "status": {
      "type": "string",
      "enum": [
        "planning",
        "in_progress",
        "on_hold",
        "completed",
        "cancelled"
      ],
      "default": "planning",
      "description": "Project status"
    },
    "client_id": {
      "type": "string",
      "description": "Associated client"
    },
    "start_date": {
      "type": "string",
      "format": "date",
      "description": "Project start date"
    },
    "end_date": {
      "type": "string",
      "format": "date",
      "description": "Project end date"
    },
    "budget": {
      "type": "number",
      "description": "Project budget"
    },
    "team_members": {
      "type": "array",
      "items": {
        "type": "string"
      },
      "description": "Array of team member emails"
    }
  },
  "required": [
    "name",
    "status"
  ]
}