{
  "name": "Invoice",
  "type": "object",
  "properties": {
    "invoice_number": {
      "type": "string",
      "description": "Unique invoice number"
    },
    "client_id": {
      "type": "string",
      "description": "Reference to contact or lead"
    },
    "client_name": {
      "type": "string",
      "description": "Client name"
    },
    "client_email": {
      "type": "string",
      "description": "Client email"
    },
    "type": {
      "type": "string",
      "enum": [
        "invoice",
        "estimate",
        "proposal",
        "contract",
        "receipt"
      ],
      "default": "invoice",
      "description": "Document type"
    },
    "status": {
      "type": "string",
      "enum": [
        "draft",
        "sent",
        "viewed",
        "paid",
        "overdue",
        "cancelled"
      ],
      "default": "draft",
      "description": "Invoice status"
    },
    "line_items": {
      "type": "array",
      "items": {
        "type": "object"
      },
      "description": "Array of line items with description, quantity, rate"
    },
    "subtotal": {
      "type": "number",
      "description": "Subtotal amount"
    },
    "tax_rate": {
      "type": "number",
      "description": "Tax rate percentage"
    },
    "tax_amount": {
      "type": "number",
      "description": "Tax amount"
    },
    "total": {
      "type": "number",
      "description": "Total amount"
    },
    "currency": {
      "type": "string",
      "default": "USD",
      "description": "Currency code"
    },
    "issue_date": {
      "type": "string",
      "format": "date",
      "description": "Issue date"
    },
    "due_date": {
      "type": "string",
      "format": "date",
      "description": "Due date"
    },
    "paid_date": {
      "type": "string",
      "format": "date",
      "description": "Date payment was received"
    },
    "payment_method": {
      "type": "string",
      "description": "Payment method used"
    },
    "notes": {
      "type": "string",
      "description": "Additional notes"
    }
  },
  "required": [
    "invoice_number",
    "client_name",
    "type",
    "total"
  ]
}