{
  "name": "ScheduledPost",
  "type": "object",
  "properties": {
    "content": {
      "type": "string",
      "description": "Post content"
    },
    "media_urls": {
      "type": "array",
      "items": {
        "type": "string"
      },
      "description": "Array of media URLs to attach"
    },
    "scheduled_date": {
      "type": "string",
      "format": "date-time",
      "description": "When to publish the post"
    },
    "platforms": {
      "type": "array",
      "items": {
        "type": "string",
        "enum": [
          "facebook",
          "linkedin",
          "google_business",
          "instagram",
          "threads"
        ]
      },
      "description": "Platforms to post to"
    },
    "status": {
      "type": "string",
      "enum": [
        "scheduled",
        "published",
        "failed",
        "cancelled"
      ],
      "default": "scheduled",
      "description": "Post status"
    },
    "published_at": {
      "type": "string",
      "format": "date-time",
      "description": "Actual publish timestamp"
    },
    "error_message": {
      "type": "string",
      "description": "Error details if publishing failed"
    }
  },
  "required": [
    "content",
    "scheduled_date",
    "platforms"
  ]
}