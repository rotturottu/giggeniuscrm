{
  "name": "TimeEntry",
  "type": "object",
  "properties": {
    "employee_id": {
      "type": "string"
    },
    "employee_name": {
      "type": "string"
    },
    "employee_email": {
      "type": "string"
    },
    "entry_type": {
      "type": "string",
      "enum": [
        "clock",
        "project"
      ],
      "default": "clock",
      "description": "clock = clock in/out, project = project time log"
    },
    "clock_in": {
      "type": "string",
      "format": "date-time"
    },
    "clock_out": {
      "type": "string",
      "format": "date-time"
    },
    "duration_minutes": {
      "type": "number",
      "description": "Duration in minutes"
    },
    "project_name": {
      "type": "string",
      "description": "Project name (for project entries)"
    },
    "task_description": {
      "type": "string"
    },
    "date": {
      "type": "string",
      "format": "date"
    },
    "status": {
      "type": "string",
      "enum": [
        "active",
        "completed"
      ],
      "default": "completed"
    },
    "notes": {
      "type": "string"
    }
  },
  "required": [
    "employee_id",
    "employee_name",
    "date",
    "entry_type"
  ]
}